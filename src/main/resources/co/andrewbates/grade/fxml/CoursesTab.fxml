<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.andrewbates.grade.controller.CourseTabController">
   <items>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <ButtonBar buttonMinWidth="0.0">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#handleAddCourse">
                     <graphic>
                        <FontAwesomeIconView glyphName="PLUS" />
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleDeleteCourse">
                     <graphic>
                        <FontAwesomeIconView glyphName="TRASH" />
                     </graphic>
                  </Button>
               </buttons>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </ButtonBar>
            <TableView fx:id="courseTable" onMouseClicked="#handleCourseClicked" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="courseNameColumn" prefWidth="75.0" text="Course Name" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <ButtonBar buttonMinWidth="0.0">
              <buttons>
                <Button fx:id="addAssignmentButton" mnemonicParsing="false" onAction="#handleAddAssignment">
                     <graphic>
                        <FontAwesomeIconView glyphName="PLUS" />
                     </graphic>
                  </Button>
                  <Button fx:id="deleteAssignmentButton" mnemonicParsing="false" onAction="#handleDeleteAssignment">
                     <graphic>
                        <FontAwesomeIconView glyphName="TRASH" />
                     </graphic>
                  </Button>
              </buttons>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </ButtonBar>
            <TableView fx:id="assignmentTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn prefWidth="75.0" text="Assignment Name" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </items>
</SplitPane>
